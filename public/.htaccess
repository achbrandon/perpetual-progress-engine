<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Redirect root to /bank
  RewriteRule ^$ /bank [R=301,L]
  
  # Handle SPA routing
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>
